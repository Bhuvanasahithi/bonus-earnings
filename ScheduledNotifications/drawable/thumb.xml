<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
    <shape
    android:shape="oval"
    android:dither="true"
    android:visible="true"
    android:useLevel="false">
    <corners android:radius="@dimen/dp_100"/>
    <size android:width="@dimen/dp_30" android:height="@dimen/dp_30"/>
    <solid android:color="@android:color/white"/>
    <stroke android:width="@dimen/dp_1" android:color="@color/colorGreen"/>
    </shape>
    </item>
    <item android:state_checked="false">
        <shape
        android:shape="oval"
        android:dither="true"
        android:visible="true"
        android:useLevel="false">
        <corners android:radius="@dimen/dp_100"/>
        <size android:width="@dimen/dp_30" android:height="@dimen/dp_30"/>
        <solid android:color="@android:color/white"/>
        <stroke android:width="@dimen/dp_1" android:color="@color/colorAccent"/>
    </shape>

    </item>
</selector>

